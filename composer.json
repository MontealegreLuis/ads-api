{
    "name": "montealegreluis/ads-api",
    "type": "project",
    "description": "API to post Ads like Craiglist",
    "license": "BSD 3-Clause",
    "authors": [
        {
            "name": "Luis Montealegre",
            "email": "montealegreluis@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "crell/api-problem": "^2.0",
        "doctrine/annotations": "^1.6",
        "doctrine/cache": "^1.7",
        "doctrine/orm": "^2.6",
        "jms/serializer": "^1.13",
        "league/tactician": "^1.0",
        "league/tactician-doctrine": "^1.1",
        "monolog/monolog": "^1.23",
        "nesbot/carbon": "^1.32",
        "nilportugues/hal": "^2.1",
        "pagerfanta/pagerfanta": "^2.0",
        "slim/slim": "^3.10",
        "symfony/validator": "^4.1",
        "teapot/status-code": "^1.1",
        "webmozart/assert": "^1.3"
    },
    "require-dev": {
        "behat/behat": "^3.4",
        "fzaninotto/faker": "^1.8",
        "phpro/grumphp": "^0.14.1",
        "phpunit/phpunit": "^7.2",
        "roave/security-advisories": "dev-master"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Ads\\": "src"
        },
        "files": [
            "config/annotations.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Ads\\": "tests/src"
        },
        "files": [
            "vendor/phpunit/phpunit/src/Framework/Assert/Functions.php"
        ]
    }
}
